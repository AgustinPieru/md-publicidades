generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Novedad {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  imagenUrl   String
  esRSE       Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Trabajo {
  id                 Int              @id @default(autoincrement())
  titulo             String
  descripcion        String
  imagenPrincipalUrl String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  imagenes           TrabajoImagen[]
}

model TrabajoImagen {
  id        Int      @id @default(autoincrement())
  url       String
  orden     Int?
  trabajo   Trabajo @relation(fields: [trabajoId], references: [id], onDelete: Cascade)
  trabajoId Int
}

model Admin {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

